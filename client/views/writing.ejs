<html>
    <h1>
        <title>Writing</title>
        <%- include('header.ejs') %>
    </h1>
    <body>
        <%- include ('navbar.ejs')%>
        <div id="content">
            <h2>Form Stuffs</h2>
            <% if(draft._id) { %>
                <form action="/blog/<%=draft._id%>/edit" method="POST">
                <% } else { %>
                <form action="/blog/writepost" method="POST">
                <% } %>>
                <input id="title" type="text">Title</input>
                <textarea name="body" style="width: 100%; height : 500px;">
                <% if(draft.body) { %><%= draft.body %><% } %>
                </textarea> <br/>
                <% if(draft.title) { %>
                    <button type="submit">Update!</button>
                    <% } else { %>
                    <button type="submit">Post!</button>
                    <% } %>   
            </form>
        </body>
        </div>
        <script>
        var title= "<%=draft.title%>";
        $(()=>{
            if(title!="") $('#title').val(title);
        })
        </script> 
    </body>
</html>